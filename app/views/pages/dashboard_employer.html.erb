<div class="container dashboard-container position-relative">
  <h1 class="py-3">Employer Dashboard</h1>
  <div class="selector py-3 row">
    <div class="col-6">
      <div class="dashboard-card profile card rounded p-3 bg-white" style="height: 70px;" data-selector="profile-card">
        <h3>Profile</h3>
      </div>

      <div class="dashboard-card upcoming-jobs card rounded p-3 bg-white"style="height: 70px;" data-selector="upcoming_jobs">
        <h3>Listed Jobs</h3>
      </div>

      <div class="dashboard-card job-history card rounded p-3 bg-white" style="height: 70px;" data-selector="job-history">
        <h3>Closed Jobs</h3>
      </div>

      <div class="dashboard-card reviews card rounded p-3 bg-white" style="height: 70px;" data-selector="reviews">
        <h3>Reviews</h3>
      </div>
    </div>

    <div class="dashboard-renders col-6">
      <div class="each-render col-md-12">
        <%= render 'shared/profile-card', user: current_user, profile: true %>
      </div>
      <div class="each-render">
        <%= render 'shared/listed-jobs', jobs: current_user.jobs, profile: true %>
      </div>
      <div class="each-render">
        <%= render 'shared/closed-jobs', jobs: current_user.jobs, profile: true %>
      </div>
      <div class="each-render">
        <%= render 'shared/view-reviews', user: current_user, profile: true %>
      </div>
    </div>

  </div>
</div>
