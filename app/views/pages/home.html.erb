<%= render 'shared/dashboard-navbar' %>

<div class="row landing-body my-3">
  <div id="landing-hero">
    <%= cl_image_tag "https://res.cloudinary.com/dt02hu2ll/image/upload/v1574099382/Template_Logo_V1_evmfvp.png", alt: "alttext", height: 80 %>
    <div class="col-12 col-md-6">
      <h1 id="landing-hero-h1">The quickest and easiest way to find short term work that suits your lifestyle.</h1>
    </div>
    <%= image_tag "undraw_modern_life_u1ev.svg", alt: "alttext", class: 'homepage-image d-none d-md-block d-lg-block d-xl-block' %>
    <% unless current_user %>
      <div id="signup">
        <a href="/users/sign_in" class="btn btn-ghost">Sign In </a>
        <a href="/users/sign_up" class="btn btn-ghost"  data-toggle="modal" data-target="#modalContactForm">Sign Up</a>
      </div>
    <% end %>
    <div class="landing-card">
      <div class="search-form-control form-group col-11" id='landing-page-search'>
        <%= simple_form_for :search, url: jobs_path, method: :get do |f| %>
        <div class="form-group form-inline py-3 justify-content-between nowrap">
          <div class="col-5 col-md-5">
            <input class="form-control string required" type="text" placeholder="Job search" name="search[query]" style="width:100%" id="search_query" value="<%= params.dig(:search, :query) %>"/>
          </div>
          <div class="col-5 col-md-5">
            <%= f.input :sectors, collection: Sector.all, label_method: :title, value_method: :id, label: false, required: false, input_html: { class: 'search_category', multiple: true, style: 'width: 100%' } %>
          </div>
          <div>
            <button name="button" type="submit" class="btn btn-ghost btn-search " style="height: 42px; width: 128px;">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        </div>
        <div class="d-inline">
          <% unless current_user %>
            <p id="search-box-text-bottom" class="m-3"><a href="#" data-toggle="modal" data-target="#modalContactForm">Sign up here</a> to apply for jobs.</p>
          <% else %>
            <p id="search-box-text-bottom" class="m-3"><a href="/dashboard" id="dashboard" target="/dashboard">Visit your dashboard here</a> to see the jobs you've saved.</p>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="py-3 landing-jobs justify-content-center">
  <div class="col-11 content-index">
    <div class="row justify-content-between">
      <h1 class="px-4">Available Jobs</h1>
      <%= link_to 'Display all jobs', jobs_path, class: 'btn btn-flat d-none d-sm-block', id: 'display_all_jobs' %>
    </div>
    <div>
      <% @jobs.each do |job|%>
        <% num_shifts = 0 %>
        <% num_shifts = job.shifts.reject { |shift| shift.completed || shift.user}.length  %>
        <% unless num_shifts <= 0 %>
          <%= render 'shared/show-jobs', job: job, num_shifts: num_shifts %>
        <% end %>
      <% end %>
    </div>
    <%= link_to 'Display all jobs', jobs_path, class: 'btn btn-flat d-block d-sm-none my-3', id: 'display_all_jobs' %>
  </div>
</div>

<div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog signup-modal-master" role="document">
    <div class="modal-content signup-modal">
      <%= render 'devise/registrations/new' %>
    </div>
  </div>
</div>

