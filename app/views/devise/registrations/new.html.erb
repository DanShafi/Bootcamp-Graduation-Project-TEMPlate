<div class="container content sign_up_modal sign_up">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs sign-up-modal-form">
      <%= f.input :employer,
                  as: :radio_buttons,
                  collection: ['Yes - I want to hire', "No - I'm looking for a job"],
                  label: "Are you looking to hire?",
                  required: true %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Email address",
                  input_html: { autocomplete: "email" }%>
      <%= f.input :first_name,
                  required: true,
                  placeholder: "First name",
                  input_html: { autocomplete: "Chris" } %>
      <%= f.input :surname,
                  required: true,
                  placeholder: "Last name",
                  input_html: { autocomplete: "Williams" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  placeholder: "Create a Password",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: "Re-enter Password",
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :dob, :as => :date,
                    required: true,
                    :start_year => Date.today.year - 18,
                    :end_year => Date.today.year - 99,
                    :month => Date.today.month,
                    :order => [:day, :month, :year],
                    :label => "Date of Birth",
                    :prompt => [] %>
      <%= f.input :summary, :as => :hidden, :input_html => { :value => "" } %>
      <%= f.input :photo, :input_html => { :value => :photo } %>
    <br>
    <%=f.check_box :terms_of_service,
                      required: true%>
    <label for="id1" class="termsandcond"><b>Yes, I understand and agree to the Template Terms of Service, including the User Agreement and Privacy Policy.</b></label>
    <br>
    <br>
    <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>



