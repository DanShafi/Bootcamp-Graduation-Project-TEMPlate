<div class="modal-header text-center signup-title">
  <h4 class="modal-title font-weight-bold "><i class="fas fa-angle-double-right signup-arrow"></i></i> Sign Up</h4>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="form-inputs sign-up-modal-form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <%= f.input :employer,
                  as: :radio_buttons,
                  collection: ['Yes - I want to hire', "No - I'm looking for a job"],
                  label: "Are you looking to hire?",
                  required: true %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Email address",
                  input_html: { autocomplete: "email" }%>
      <%= f.input :first_name,
                  required: true,
                  placeholder: "First name",
                  input_html: { autocomplete: "Chris" } %>
      <%= f.input :surname,
                  required: true,
                  placeholder: "Last name",
                  input_html: { autocomplete: "Williams" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  placeholder: "Create a Password",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: "Re-enter Password",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :dob, :as => :date,
                    required: true,
                    :start_year => Date.today.year - 18,
                    :end_year => Date.today.year - 99,
                    :month => Date.today.month,
                    :order => [:day, :month, :year],
                    :label => "Date of Birth",
                    :prompt => [] %>
      <%= f.input :summary, :as => :hidden, :input_html => { :value => "" } %>
      <%= f.input :photo, :input_html => { :value => :photo } %>
  <%=f.check_box :terms_of_service,
                    required: true%>
  <label for="id1" class="termsandcond">Yes, I understand and agree to the Template Terms of Service, including the User Agreement and Privacy Policy.</label>
</div>
<br>
<%= f.button :submit, "Sign up" %>
<% end %>



