  <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#createReview<%=shift.id%>">
    <%= "Review #{shift.user.first_name}" %>
  </button>

  <div class="modal fade" id="createReview<%=shift.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= "Review #{shift.user.first_name}" %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [shift, @review], url: shift_reviews_path(shift, @review) do |f| %>
              <%= f.input :score, as: :integer, error: 'Please enter a number between 1 and 5' %>
              <%= f.input :title, as: :string, error: 'Title must be between 3 and 20 characters' %>
              <%= f.input :content, as: :text, error: 'Max. 500 characters' %>
              <%= f.button :submit, "Submit review", class: "btn btn-flat" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
