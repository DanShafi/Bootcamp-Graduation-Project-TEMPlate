
  <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#viewApplications">
    <%= "View Applications" %>
  </button>

  <div class="modal fade" id="viewApplications" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><%= "Open Applications (#{shift.requests.length})" %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% shift.requests.each do |request| %>
              <p><%= request.user.email %></p>
              <p><%= request.content %></p>
            <% end %>
          </div>

        </div>
      </div>
    </div>
