
<div id="upcoming_jobs" class="col-12 col-md-6">
  <div class="card p-3 m-2">

    <h2>Job History</h2>
    <br>
      <% shifts.order(:date).each do |shift|  %>
          <% if shift.date < DateTime.now  %>
            <div class="row justify-content-between m-2">
              <p> <%= shift.job.title %> </p>
              <%= render 'shifts/shift-card-modal', shift: shift %>
            </div>
          <% end %>
      <% end %>
  </div>
</div>
