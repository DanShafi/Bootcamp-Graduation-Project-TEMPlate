<div id="upcoming_jobs" class="col-12 col-md-6">
  <div class="card p-3 m-2">

    <h2>Upcoming Jobs</h2>
    <br>

    <% shifts.order(:start_time).each do |shift|  %>
        <% if shift.date > DateTime.now && shift.start_time > Time.now.hour %>
          <%= render 'shifts/shift-card-modal', shift: shift %>
        <% end %>

    <% end %>
  </div>
</div>
