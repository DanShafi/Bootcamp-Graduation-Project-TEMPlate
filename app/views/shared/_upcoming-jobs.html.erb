    <div id="upcoming_jobs" class="col-6 card p-3">
      <h2>Upcoming Jobs</h2>
      <br>

      <% user.shifts.order(:start_time).each do |shift|  %>
          <% if shift.date > DateTime.now && shift.start_time > Time.now.hour %>
            <p> <%= link_to shift.job.title, shift_path(shift) %> </p>
          <% end %>

      <% end %>
    </div>
