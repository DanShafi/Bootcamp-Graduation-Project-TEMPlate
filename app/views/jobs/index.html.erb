<div class="row">
  <div class="content-index col-12 col-lg-7">
    <div class="container">
      <div class="row justify-content-between border-bottom">
        <h1 class="px-4">Available Jobs</h1>
        <%= link_to 'Display all', jobs_path, class: 'btn btn-flat d-none d-sm-block', id: 'display_all_jobs' %>
      </div>
      <div>
        <%= simple_form_for :search, url: jobs_path, method: :get do |f| %>
        <div class="form-group form-inline py-3 justify-content-between nowrap">
          <div class="col-8 col-lg-10">
            <input class="form-control string required" type="text" placeholder="Job search" name="search[query]" style="width:100%" id="search_query" value="<%= params.dig(:search, :query) %>"/>
          </div>
          <div>
            <button name="button" type="submit" class="btn btn-search " style="height: 42px; width: 128px;">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        </div>

        <%= f.input :sectors, collection: Sector.all, label_method: :title, value_method: :id, label: false, required: false, input_html: { class: 'search_category mx-3', multiple: true, style: 'width: 100%', value: "params.dig(:search, :query)" } %>
        <%= f.input :price_cents, label: "Filter by pay/h", required: false,
          input_html: { class: 'js-range-slider',
          type: 'text',
          name: 'my_range',
          value: "",
          'data-type': "double",
          'data-min': "5",
          'data-max': "50",
          'data-from': "5",
          'data-to': "100",
          'data-grid': "true",
          'data-keyboard': "true",
          'data-skin': "round",
          'data-prefix': "Â£"
        } %>

        <%= f.input :start_time, label: "Filter by date", required: false,
          input_html: { class: 'js-range-slider2',
          type: 'text',
          name: 'start_time',
          value: "",
          'data-type': "double",
          'data-skin': "round"
        } %>

        <% end %>
      </div>
      <div>
        <% @jobs.each do |job|%>
          <% num_shifts = job.shifts.select { |shift| Time.parse(shift.start_time) > Time.now && !shift.user}.length  %>
          <% unless num_shifts <= 0 %>
            <%= render 'shared/show-jobs', job: job, num_shifts: num_shifts %>
          <% end %>
        <% end %>
        <%= link_to 'Display all', jobs_path, class: 'btn btn-flat d-block d-sm-none my-3', id: 'display_all_jobs' %>
      </div>
    </div>
  </div>
  <div class="col-5 col-lg-5 d-none d-lg-block d-xl-block">
    <div
      id="map"
      style=" position: sticky;
      top: 65px;
      bottom: 0;
      display: block;
      width: 100%;
      height: 92vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

