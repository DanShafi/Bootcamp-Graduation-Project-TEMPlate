<div class="container">
  <h1>Show Jobs Page</h1>

  <% @job.shifts.each do |shift| %>
    <div class="d-flex justify-content-between card p-3">
      <div>
        <%= shift.start_time %>
        <%= shift.end_time %>
        <%= shift.pay %>
      </div>

      <%= render 'shared/application', shift: shift %>
      <%= render 'shared/view_applications', shift: shift %>


    </div>
  <% end %>

  <%= render 'shared/modal-form', open_modal: "Edit this Job", modal_title: "Edit This Job", button_text: "Save Changes"%>
  <%= render 'shared/create-shift' %>

</div>
