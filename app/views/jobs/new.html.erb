<div class="container content">
  <h1>New Job</h1>

    <%= simple_form_for @job do |f| %>
      <%= f.input :title, error: 'Title must be between 2 and 30 characters' %>
      <%= f.input :summary %>
      <%= f.input :description, as: :text, error: 'Must have a description' %>
      <%= f.input :location, error: 'Must have a location' %>
      <select class="sector-picker" style="width: 400px;" name="states[]" multiple="multiple">
        <% Sector.all.each do |sector| %>
          <option value="Sector"><%= sector.title.capitalize %></option>
        <% end %>
      </select>

      <%= f.button :submit, "Create Job", class: "btn btn-flat" %>
  <% end %>
</div>
